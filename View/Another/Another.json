{
	"$schema": "https://developer.microsoft.com/json-schemas/sp/v2/row-formatting.schema.json",
	"groupProps": {
		"headerFormatter": {
			"elmType": "div",
			"style": {
				"display": "flex",
				"flex-direction": "row",
				"align-items": "start",
				"flex-wrap": "wrap",
				"color": "#8665b3",
				"font-weight": "600",
				"font-family": "Segoe UI"
			},
			"attributes": {
				"class": "ms-fontColor-themePrimary sp-row-card"
			},
			"txtContent": "@group.fieldData"
		},
		"hideFooter": true
	},
	"hideColumnHeader": true,
	"hideSelection": true,
	"debugMode": false,
	"hideFooter": true,
	"rowFormatter": {
		"elmType": "div",
		"style": {
			"font-family": "Segoe UI",
			"align-items": "stretch",
			"flex-direction": "column",
			"flex-wrap": "wrap",
			"margin-left": "80px",
			"display": "flex"
		},
		"children": [
			{
				"elmType": "div",
				"style": {
					"background-color": "#b2b2b229",
					"color": "#b2b2b229",
					"font-size": "large",
					"align-items": "stretch",
					"flex-direction": "column",
					"flex-wrap": "wrap",
					"padding": "15px",
					"display": "flex"
				},
				"children": [
					{
						"elmType": "div",
						"style": {
							"color": "#8665b3",
							"vertical-align": "top",
							"font-size": "medium",
							"text-align": "left",
							"padding": "0px 15px 0px 0px"
						},
						"attributes": {
							"class": "ms-fontColor-themePrimary"
						},
						"children": [
							{
								"elmType": "span",
								"style": {
									"color": "#8665b3"
								},
								"attributes": {
									"iconName": "Lightbulb"
								}
							},
							{
								"elmType": "span",
								"style": {
									"color": "#8665b3",
									"font-family": "Segoe UI"
								},
								"attributes": {
									"class": "ms-fontColor-themePrimary"
								},
								"txtContent": "Answer"
							}
						]
					},
					{
						"elmType": "div",
						"style": {
							"color": "#000000",
							"align-items": "start",
							"flex-direction": "row",
							"flex-wrap": "wrap",
							"display": "flex"
						},
						"txtContent": "[$Answer]"
					},
					{
						"elmType": "div",
						"style": {
							"align-items": "start",
							"flex-direction": "row",
							"flex-wrap": "wrap",
							"display": "flex"
						},
						"children": [
							{
								"elmType": "button",
								"style": {
									"background-color": "#8665b3",
									"color": "#ffff",
									"fill": "currentColor",
									"margin-top": "10px"
								},
								"attributes": {
									"class": "ms-fontColor-themePrimary sp-row-button"
								},
								"txtContent": "Show more"
							}
						]
					}
				]
			}
		]
	}
}